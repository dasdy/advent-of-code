{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "tsc: build - tsconfig.json",
      "command": "npx",
      "args": ["tsc", "-p", "tsconfig.json"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
